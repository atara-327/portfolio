---
import Layout from "../../layouts/Layout.astro";
import { works } from "../../data/works";

export function getStaticPaths() {
  return works.map((work) => ({
    params: { slug: work.slug },
    props: { work },
  }));
}

const { work } = Astro.props;
---

<Layout title={`${work.title} - Portfolio`}>
  <div class="max-w-3xl mx-auto">
    <div class="mb-8">
      <a href="/" class="text-sm text-gray-500 hover:text-gray-900 transition-colors flex items-center gap-1">
        &larr; Back to Home
      </a>
    </div>

    <header class="mb-10">
      <div class="flex items-center gap-4 mb-4">
         <h1 class="text-3xl sm:text-4xl font-bold text-gray-900">{work.title}</h1>
         <span class="text-sm font-mono text-gray-500 bg-gray-100 px-3 py-1 rounded-full">{work.year}</span>
      </div>
     
      <div class="flex flex-wrap gap-2 mb-6">
        {work.tags.map(tag => (
          <span class="text-sm text-blue-600 bg-blue-50 px-3 py-1 rounded-full font-medium">
            {tag}
          </span>
        ))}
      </div>

      <p class="text-xl text-gray-600 leading-relaxed">
        {work.description}
      </p>
    </header>

    <div class="rounded-2xl overflow-hidden shadow-lg mb-12">
      <img src={work.thumbnail} alt={work.title} class="w-full h-auto object-cover" />
    </div>

    <div class="prose prose-lg prose-blue max-w-none text-gray-700">
      <div set:html={work.details} />
    </div>

    <div class="mt-16 pt-8 border-t border-gray-100">
       <div class="flex gap-4">
        {work.demoUrl && (
          <a href={work.demoUrl} target="_blank" rel="noopener noreferrer" class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-lg text-white bg-blue-600 hover:bg-blue-700 transition-colors">
            View Live Demo
          </a>
        )}
        {work.repoUrl && (
          <a href={work.repoUrl} target="_blank" rel="noopener noreferrer" class="inline-flex items-center justify-center px-6 py-3 border border-gray-200 text-base font-medium rounded-lg text-gray-900 bg-white hover:bg-gray-50 transition-colors">
            View Source Code
          </a>
        )}
      </div>
    </div>
  </div>
</Layout>
