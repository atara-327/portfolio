---
import Layout from "../../layouts/Layout.astro";
import { works } from "../../data/works";

export function getStaticPaths() {
  return works.map((work) => ({
    params: { slug: work.slug },
    props: { work },
  }));
}

const { work } = Astro.props;
---

<Layout title={`${work.title} - Portfolio`}>
  <div class="max-w-3xl mx-auto">
    <div class="mb-8">
      <a href="/" class="text-sm text-zinc-500 hover:text-zinc-300 transition-colors flex items-center gap-1">
        &larr; Back to Home
      </a>
    </div>

    <header class="mb-10">
      <div class="flex items-center gap-4 mb-4">
         <h1 class="text-3xl sm:text-4xl font-bold text-zinc-100">{work.title}</h1>
         <span class="text-sm font-mono text-zinc-400 bg-zinc-800 px-3 py-1 rounded-full">{work.year}</span>
      </div>
     
      <div class="flex flex-wrap gap-2 mb-6">
        {work.tags.map(tag => (
          <span class="text-sm text-blue-400 bg-blue-900/30 px-3 py-1 rounded-full font-medium border border-blue-800/50">
            {tag}
          </span>
        ))}
      </div>

      <p class="text-xl text-zinc-300 leading-relaxed">
        {work.description}
      </p>
    </header>

    <div class="rounded-2xl overflow-hidden shadow-lg mb-12">
      <img src={work.thumbnail} alt={work.title} class="w-full h-auto object-cover" />
    </div>

    <div class="prose prose-lg prose-invert max-w-none text-zinc-300">
      <div set:html={work.details} />
    </div>

    <div class="mt-16 pt-8 border-t border-zinc-800">
       <div class="flex gap-4">
        {work.demoUrl && (
          <a href={work.demoUrl} target="_blank" rel="noopener noreferrer" class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-lg text-zinc-900 bg-blue-500 hover:bg-blue-400 transition-colors">
            View Live Demo
          </a>
        )}
        {work.repoUrl && (
          <a href={work.repoUrl} target="_blank" rel="noopener noreferrer" class="inline-flex items-center justify-center px-6 py-3 border border-zinc-700 text-base font-medium rounded-lg text-zinc-300 bg-transparent hover:bg-zinc-800 transition-colors">
            View Source Code
          </a>
        )}
      </div>
    </div>
  </div>
</Layout>
